# Initializing Rom Information
ini_set("rom_name",		"AGNi EAS Kernel VIPsprout Edition");
ini_set("rom_version",	"v15.7 stable");
ini_set("rom_author",	"psndna88@xda");
ini_set("rom_device",	"SETDEVICETYPE");
ini_set("rom_date",		"December, 24, 2021");

# Show Simple Splash
splash(
    1000,
    "agni"
);

theme("ics");
loadlang("langs/en.lang");
fontresload( "0", "ttf/Roboto-Regular.ttf", "12" );
fontresload( "1", "ttf/Roboto-Regular.ttf", "14" );

viewbox(
    "<~welcome.title>",
  
    "<~welcome.text1> <b>"+
	  ini_get("rom_name")+
	"</b> <~common.for> <b>"+ini_get("rom_device")+"</b>.\n\n"+
	
      "  <~welcome.version>\t\t: <b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n\n\n"+
      "  DEVELOPER \t\t: <b><#selectbg_g>"+ini_get("rom_author")+"</#></b>\n\n\n"+
      "  <~welcome.updated>\t\t: <b><#selectbg_g>"+ini_get("rom_date")+"</#></b>\n\n\n"+

    "<~welcome.next>",
  
    "@welcome"
);

agreebox(
  #-- Title
    "AGNi™ Kernel Note",
  
  #-- Subtitle / Description
    "Read Carefully",
  
  #-- Icon:
    "@license",
  
  #-- Text Content 
    resread("AGNi_info.txt"),
  
  #-- Checkbox Text
    "OK Lets Go...",
  
  #-- Unchecked Alert Message
    "Tick to proceed !"
);

